<%= form_tag(@action, method: :post) do %>

  <div class="form-group">
    <%= label_tag(:email, "Email: ") %>
    <%= text_field_tag(:email, nil, size: 40) %>
  </div>

  <div class="form-group">
    <%= label_tag(:password, "Password: ") %>
    <%= password_field_tag(:password) %>
  </div>

  <%= submit_tag("Login/Sign Up") %>
  <br/>
  <div>
    <%= link_to "Back", :back %>
  </div>

<% end %>